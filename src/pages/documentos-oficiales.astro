---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Liceo Diego Portales Linares">
    <Header />
    <div class="py-5">
        <div
            class="container mx-auto px-4 py-4 sm:py-4 lg:py-4 sm:px-6 lg:px-8 flex items-center"
        >
            <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
            <h2 class="text-4xl font-bold text-center mx-2 uppercase">
                Documentos oficiales 2023
            </h2>
            <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
        </div>
        <div
            class="container mx-auto px-4 py-4 sm:py-4 lg:py-4 sm:px-6 lg:px-8"
        >
            <div class="text-xl space-y-4 text-center py-6">
                <div class="transition-all hover:scale-90 hover:text-blue-500">
                    <a href="/dctos/REGLAMENTO_INTERNO_2023.pdf" target="_blank"
                        >Reglamento Interno y Protocolos de Actuación</a
                    >
                </div>
                <div class="transition-all hover:scale-90 hover:text-blue-500">
                    <a href="#" target="_blank"
                        >Proyecto Educativo Institucional</a
                    >
                </div>
                <div class="transition-all hover:scale-90 hover:text-blue-500">
                    <a
                        href="/dctos/PROGRAMA_SEXUALIDAD_AFECTIVIDAD_2023.pdf"
                        target="_blank">Proyectos Sexualidad y Afectividad</a
                    >
                </div>
                <div class="transition-all hover:scale-90 hover:text-blue-500">
                    <a
                        href="/dctos/REGLAMENTO_DE_EVALUACIÓN_2023.pdf"
                        target="_blank">Reglamento de Evaluación</a
                    >
                </div>
                <div class="transition-all hover:scale-90 hover:text-blue-500">
                    <a
                        href="/dctos/PLAN_FORMACION_CIUDADANA_2023.pdf"
                        target="_blank">Plan de Formación Ciudadana</a
                    >
                </div>
            </div>
        </div>
        <div
            class="container mx-auto px-4 py-4 sm:py-4 lg:py-4 sm:px-6 lg:px-8 flex items-center"
        >
            <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
            <h2 class="text-4xl font-bold text-center mx-2 uppercase">
                Documentos oficiales 2024
            </h2>
            <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
        </div>
    </div>
</Layout>
<Footer />
