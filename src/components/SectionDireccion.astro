---
import direccionData from "../direccion.json";

// desescructuramos el objeto direccion
const { direccion } = direccionData;
---

<div class="py-5">
    <div
        class="container mx-auto px-4 py-4 sm:py-4 lg:py-4 sm:px-6 lg:px-8 flex items-center"
    >
        <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
        <h2 class="text-4xl font-bold text-center mx-2">Direcci√≥n</h2>
        <hr class="flex-grow border-t-2 border-gray-300 mx-2" />
    </div>

    <div class="container mx-auto px-4 py-4 sm:py-4 lg:py-4 sm:px-6 lg:px-8">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 justify-items-center items-stretch pt-10 text-center"
        >
            {
                direccion.map((dir) => (
                    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 h-full flex flex-col">
                        <img
                            loading="lazy"
                            src={dir.imagen}
                            alt={dir.nombre}
                            class="object-cover w-full rounded-t-lg"
                        />

                        <div class="p-5 flex-grow">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                                {dir.nombre}
                            </h5>

                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                                {dir.cargo}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
