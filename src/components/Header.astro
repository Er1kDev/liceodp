<nav class="background-header p-1">
    <div
        class="container mx-auto px-4 flex flex-wrap items-center justify-between"
    >
        <a href="/" class="text-white text-xl font-bold">
            <img src="/public/logo-liceo.png" alt="logo-liceo" class="w-20" />
        </a>
        <button
            id="mobile-menu-button"
            class="block md:hidden text-white focus:outline-none"
        >
            <svg
                class="h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
        <div
            id="mobile-menu"
            class="hidden w-full md:flex md:items-center md:w-auto"
        >
            <div
                class="flex flex-col md:flex-row md:space-x-4 justify-center items-center"
            >
                <div class="relative">
                    <button
                        class="text-white transition-all hover:bg-blue-900 focus:bg-blue-900 px-3 py-2 rounded-md text-md font-bold flex items-center"
                        id="btnMenu1"
                    >
                        Dirección
                        <svg
                            class="ml-2 w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div
                        id="menu1"
                        class="hidden absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg z-50"
                    >
                        <a
                            href="/direccion"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >Dirección</a
                        >
                        <a
                            href="/direccion-cga"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >C.G.A</a
                        >
                    </div>
                </div>
                <div class="relative">
                    <button
                        class="text-white transition-all hover:bg-blue-900 focus:bg-blue-900 px-3 py-2 rounded-md text-md font-bold flex items-center"
                        id="btnMenu2"
                    >
                        Especialidad
                        <svg
                            class="ml-2 w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div
                        id="menu2"
                        class="hidden absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg z-50"
                    >
                        <a
                            href="/enfermeria"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >Atención Enfermería</a
                        >
                        <a
                            href="/agropecuaria"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >Agropecuaria</a
                        >
                        <a
                            href="/cientifico-humanista"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >Científico Humanista</a
                        >
                        <a
                            href="/dibujo-tecnico"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md text-md"
                            >Dibujo Técnico</a
                        >
                        <a
                            href="/gastronomia"
                            class="block transition-all px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-md"
                            >Gastronomía</a
                        >
                    </div>
                </div>
                <div class="relative">
                    <button
                        class="text-white transition-all hover:bg-blue-900 focus:bg-blue-900 px-3 py-2 rounded-md text-md font-bold flex items-center"
                        id="btnMenu3"
                    >
                        Estamentos
                        <svg
                            class="ml-2 w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div
                        id="menu3"
                        class="hidden absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg z-50"
                    >
                        <a
                            href="/consejo-escolar"
                            class="block px-4 transition-all py-2 text-gray-800 hover:bg-gray-200 rounded-md"
                            >Consejo Escolar</a
                        >
                        <a
                            href="/documentos-oficiales"
                            class="block px-4 transition-all py-2 text-gray-800 hover:bg-gray-200 rounded-md"
                            >Documentos Oficiales</a
                        >
                        <a
                            href="/pie"
                            class="block px-4 transition-all py-2 text-gray-800 hover:bg-gray-200 rounded-md"
                            >Programa PIE</a
                        >
                    </div>
                </div>
                <a
                    href="/contacto"
                    class="text-white transition-all hover:bg-blue-900 focus:bg-blue-900 px-3 py-2 rounded-md text-md font-bold"
                >
                    Contacto
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
    });

    const menus = [
        { buttonId: "btnMenu1", menuId: "menu1" },
        { buttonId: "btnMenu2", menuId: "menu2" },
        { buttonId: "btnMenu3", menuId: "menu3" },
    ];

    menus.forEach(({ buttonId, menuId }) => {
        const button = document.getElementById(buttonId);
        const menu = document.getElementById(menuId);

        button.addEventListener("click", (e) => {
            e.stopPropagation();
            menus.forEach(({ menuId: otherMenuId }) => {
                if (otherMenuId !== menuId) {
                    document
                        .getElementById(otherMenuId)
                        .classList.add("hidden");
                }
            });
            menu.classList.toggle("hidden");
        });

        document.addEventListener("click", (e) => {
            const targetNode = e.target as Node;
            if (
                !menu.contains(targetNode) &&
                e.target !== button &&
                !button.contains(targetNode)
            ) {
                menu.classList.add("hidden");
            }
        });
    });
</script>

<style>
    .background-header {
        background-color: #2c3581;
    }
</style>
